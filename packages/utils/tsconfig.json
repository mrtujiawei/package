{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "ts-build",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
